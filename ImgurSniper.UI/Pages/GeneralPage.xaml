<Page x:Class="ImgurSniper.UI.Pages.GeneralPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:ImgurSniper.UI.Pages"
	  xmlns:gif="http://wpfanimatedgif.codeplex.com"
		xmlns:cultureStrings="clr-namespace:ImgurSniper.UI.Properties"
	  mc:Ignorable="d" 
	  d:DesignHeight="300" d:DesignWidth="300">

	<DockPanel HorizontalAlignment="Stretch" Margin="13" >
		<TextBlock FontSize="14" Foreground="Gray" Margin="0,0,0,10" TextWrapping="Wrap" DockPanel.Dock="Top"
				   Text="{x:Static Member=cultureStrings:strings.pageGeneralDesc}" />
		<Image Source="/ImgurSniper.UI;component/Resources/Logo.png" Margin="0,10,0,0" DockPanel.Dock="Bottom"/>
	</DockPanel>
</Page>
